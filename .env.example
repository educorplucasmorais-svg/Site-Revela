###############################################
# Example Environment Variables (No Secrets)  #
# Copy to .env and fill in real credentials.  #
###############################################

## General / Frontend
# Base URL of backend API consumed by frontend (tRPC / REST fallbacks)
VITE_API_URL=https://api.seu-dominio.com
# Public Stripe key exposed to browser
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_coloque_aqui
# Supabase (public) project URL & anon key (keep anon, never service role here)
VITE_SUPABASE_URL=https://seu-projeto.supabase.co
VITE_SUPABASE_ANON_KEY=sua-chave-anon-publica

## Server Runtime
# Port for Express/tRPC server in local dev
PORT=3060
# Node environment flag (development | production)
NODE_ENV=development
# Public URL of deployed frontend (used for CORS / redirects)
FRONTEND_URL=https://seu-frontend.vercel.app

## Database (choose ONE approach)
# Option A: Single connection URL (preferred in production)
DATABASE_URL=mysql://user:pass@host:3306/database
# Option B: Individual params (used if DATABASE_URL absent)
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

## Stripe (server-side secrets)
# Secret key ONLY on server (never expose to frontend)
STRIPE_SECRET_KEY=sk_test_coloque_aqui
# Webhook secret for verifying events (only if using webhooks)
STRIPE_WEBHOOK_SECRET=whsec_coloque_aqui

## WhatsApp / Meta Graph API (optional)
# Cloud API Phone Number ID
WHATSAPP_PHONE_ID=your_phone_id
# Token (Bearer) for Graph API requests
WHATSAPP_TOKEN=your_meta_token
# Default target number (international format). Example: +5531999999999
WHATSAPP_PHONE=+5500000000000
# Optional fallback / alias envs supported by router
WHATSAPP_DEFAULT_NUMBER=+5500000000000
WHATSAPP_TO=+5500000000000

## Seed Admin (for initial provisioning)
# Used by seed_admin.cjs to create first user; change after provisioning
SEED_ADMIN_EMAIL=admin@local
SEED_ADMIN_NAME=admin
SEED_ADMIN_PASSWORD=troque_apos_seed
# NOTE: In frontend `AdminLogin.tsx` a non VITE_ variable will NOT be exposed.
# Prefer moving logic server-side or renaming to VITE_SEED_ADMIN_PASSWORD if really needed client-side.

## Additional Optional Flags
# Enable mock WhatsApp mode without hitting API (set to true/false)
WHATSAPP_MOCK=true

###############################################
